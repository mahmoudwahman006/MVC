@{
	Layout = "AdminLayout";
}
@model Customer
<div class="page-wrapper">
	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title mt-5">Edit Customer</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form asp-action="edit_cust" asp-controller="Admin">
					<div class="row formtype">
						<div class="col-md-4">
							<div class="form-group">
								<label>Customer ID</label>
								<input class="form-control" type="text" name="cust_id" value="@Model?.Id">
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Email</label>
								<input type="text" class="form-control" id="usr" name="cust_Email" value="@Model?.Email">
							</div>
						</div>	
						<div class="col-md-4">
							<div class="form-group">
								<label>Address</label>
								<input type="text" class="form-control" id="usr" name="cust_Address" value="@Model?.Address">
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Phone Number</label>
								<input type="text" class="form-control" id="usr1" name="cust_Phone" value="@Model?.PhoneNumber">
							</div>
						</div>
					
					</div>

					<button type="submit" class="btn btn-primary buttonedit">Save</button>
				</form>
			</div>
		</div>
		
	</div>
</div>

		</div>

