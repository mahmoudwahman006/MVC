@{
    Layout = "AdminLayout";

}
@model IEnumerable<Room>
<div class="page-wrapper">
	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<div class="mt-5">
						<h4 class="card-title float-left mt-2">All Rooms</h4> <a asp-action="add_Room" asp-controller="Admin" class="btn btn-primary float-right veiwbutton">Add Room</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="card card-table">
					<div class="card-body booking_card">
						<div class="table-responsive">
							<table class="datatable table table-stripped table table-hover table-center mb-0">
								<thead>
									<tr>
										<th>Room ID</th>
										<th>Room Type</th>
										<th>Cancellation</th>
										<th>Food</th>
										<th>Floor</th>
										<th>Bed Count</th>
										<th>Price</th>
										<th>Status</th>
										<th class="text-right">Actions</th>
									</tr>
								</thead>
								<tbody>
								
									@{
									
										foreach (var room in Model)
										{
										
											<tr>
												<td>@room.RoomId</td>
												<td>@room.Category</td>
												<td>@room.cancellation</td>
												<td>@room.Food</td>
												<td>@room.RCFloor</td>
												<td>@room.Bed_Count</td>
												<td>@room.RCPrice</td>
												
		
												<td>
													<div class="actions"> <a href="#" class="btn btn-sm bg-success-light mr-2">@room.active</a> </div>
												</td>
												<td class="text-right">
													<div class="dropdown dropdown-action">
														<a class="action-icon dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
														<div class="dropdown-menu dropdown-menu-right"> <a asp-action="edit_Room" asp-controller="Admin" asp-route-id="@room.RoomId" class="dropdown-item"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a> <a class="dropdown-item" asp-action="delete_Room" asp-route-Room_Id="@room.RoomId"><i class="fas fa-trash-alt m-r-5"></i> Delete</a> </div>
													</div>
												</td>
											</tr>
										}
									}
								
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="delete_asset" class="modal fade delete-modal" role="dialog">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body text-center">
					<img src="assets/img/sent.png" alt="" width="50" height="46">
					<h3 class="delete_class">Are you sure want to delete this Asset?</h3>
					<div class="m-t-20">
						<a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
						<button type="submit" class="btn btn-danger">Delete</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
	</div>